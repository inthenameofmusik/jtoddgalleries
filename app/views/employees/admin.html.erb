
<%= render 'partials/header' %>

<br>
<br>
<div id="employees-page">
<%= render :partial => "partials/feature", locals: {type: @full_feature} %>
</div>
<br><br>

<div id="full-employees-panel" class="classy-list-container">
	<div id="title">Employees</div>
	<%= link_to "New Employee", new_employee_path %>

	<div id="employees" class="classy-list">
		<% @employees.each.with_index do |service, index| %>
			<div class="a-service large">
				<% if index.even? %>
					<div class="picture-left picture">
						<%= image_tag service.staff_photo.url(:proper_height) %>
						<div class="title-area"><%= service.name %></div>
					</div>
					<div class="description description-right"><%= service.bio %></div>
				<% elsif index.odd? %>
					<div class="picture-right picture">
						<%= image_tag service.staff_photo.url(:proper_height) %>
						<div class="title-area"><%= service.name %></div>
					</div>
					<div class="description description-left"><%= service.bio %></div>					
				<% end %>
			<div class="editing">
				<%= link_to "Edit", edit_employee_path(service) %>
				<%= link_to 'Destroy',  service,  method: :delete, data: { confirm: 'Are you sure?' } %>
			</div>
			</div><br><br><br>
		<% end %>
		
	</div>
</div><br><br><br><br>

<%= render 'partials/footer' %>