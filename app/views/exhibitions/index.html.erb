
<%= render 'partials/header' %>

<br>
<br>
<div id="exhibition">
<%= render :partial => "partials/feature", locals: {type: @full_feature} %>
</div>
<br><br>

<div id="full-exhibition-results">
	<div id="exhibition-nav-past">
		<span>Exhibitions</span><br>
		<ul>
			<li id="margin-correct"><%= link_to "Now Showing", exhibitions_current_path, :id => "first-link" %></li>
			<li id="upcoming-expo"><%= link_to "Upcoming", exhibitions_upcoming_path, :id => "middle-link" %></li>
			<li id="non-margin-correct"><%= link_to "Past", exhibitions_path, :id => "last-link" %></li>
		</ul>
	</div>
	<div id="exhibition-results">
		<% @exhibition.each do |expo| %>
			<div class="an-expo-result">
				<img src="<%= expo.main_photo.url(:listing) %>">
				<div class="a-result-info">
					<div class="column-1">
						<span id="artist"><br><%= expo.artist.last_first if expo.artist.present? %></span><br>
						<span id="title"><%= expo.title %></span>
					</div>
					<div class="column-2">
						<br><%= expo.from_date.to_formatted_s(:long) %><br>
						<span class="admission">Click to RSVP</span>
					</div>
				</div>
				<div class="to-show">
					<%= link_to "", "exhibitions/#{expo.id}" %>
				</div>
			</div>
		<% end %>
		<br><br><br><br><br>
	</div>
</div>

<%= render 'partials/footer' %>